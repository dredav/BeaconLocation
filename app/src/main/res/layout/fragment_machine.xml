<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="fill_parent"
                android:icon="@mipmap/slot_machine"
                android:background="#ffa0cd43"
                android:id="@+id/imageView"
                android:src="@mipmap/slot_machine"
                android:layout_column="0" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/name"
                android:textSize="30dp"
                android:background="#ffa0cd43"
                android:textColor="#ffffff"
                android:layout_column="1" />

        </TableRow>

    </TableLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:id="@+id/beaconList" />

    <TextView
        android:id="@+id/emptyList_machine"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:text="@string/emptyList_machine"
        android:textColor="#525252"
        android:textSize="19.0sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/allBeaconsInRange"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_above="@+id/beaconList"
        android:layout_centerHorizontal="true"
        android:text="@string/allBeaconsInRange"
        android:textColor="#ff009600"
        android:textSize="19.0sp"
        android:visibility="gone" />

</LinearLayout>